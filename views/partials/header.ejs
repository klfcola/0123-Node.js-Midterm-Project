<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand">TinyLinks</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav d-flex justify-content-between w-100">
        <div class="d-flex">
          <a href="/urls" class="nav-item nav-link">My URLs</a>
          <a href="/urls/new" class="nav-item nav-link">Create New URL</a>
        </div>
        <div class="d-flex">
          <span class="nav-item nav-link">Logged in as: </span>
          <form action="/logout" method="post">
            <button type="submit" class="btn btn-danger">Logout</button>
          </form>
          <a href="/auth/login" class="nav-item nav-link">Login</a>
          <a href="/auth/register" class="nav-item nav-link">Register</a>
        </div>
      </div>
    </div>
  </nav>
</header>
<script>
  const links=document.querySelectorAll(".nav-link");
  const logout=document.querySelector(".btn-danger");
</script>
<% if(locals.auth){ %>
<script>
  links[0].style.display="none";
  links[1].style.display="none";
  links[2].style.display="none";
  links[3].style.display="block";
  links[4].style.display="block";
  logout.style.display="none";
</script>
<% }else{ %>
<script>
  links[0].style.display="block";
  links[1].style.display="block";
  links[2].style.display="block";
  links[3].style.display="none";
  links[4].style.display="none";
  logout.style.display="block";
</script>
<% } %>